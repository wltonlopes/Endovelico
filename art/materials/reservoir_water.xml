<?xml version="1.0" encoding="utf-8"?>
<material>
	<shader effect="model_water"/>
	<!-- Textura base obrigatória -->
	<required_texture name="baseTex"/>
	<!-- Textura de reflexo do céu -->
	<renderquery name="water_tex"/>
	<renderquery name="sky_cube"/>
	<renderquery name="sim_time"/>
	<!-- Movimento quase parado -->
	<uniform name="translation" value="0.0001 -0.0001"/>
	<!-- Reflexo moderado -->
	<uniform name="shininess" value="8.0"/>
	<uniform name="specularStrength" value="0.3"/>
	<!-- Ondulação mínima -->
	<uniform name="waviness" value="0.02"/>
	<!-- Água azul clara -->
	<uniform name="waterTint" value="0.4 0.6 0.8"/>
	<uniform name="reflectionTint" value="0.4 0.6 0.8"/>
	<uniform name="reflectionTintStrength" value="0.15"/>
	<!-- Mais transparência -->
	<uniform name="murkiness" value="0.5"/>
	<!-- Reflexo suave -->
</material>
